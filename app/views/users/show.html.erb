<main>
		<!-- If user avatars are added they will go here as well. -->
		<div id="user-profile" class="jumbotron col-md-4 user-container">
			<%= image_tag @user.avatar.url(:medium) %>
		  <h2> <%= @user.fullname %> </h2>
		  <h4> <%= @user.username %> </h4>
		  <%= link_to "Active Posts", "/users/#{@user.id}" %> <%= @user.posts.count %> 
		  <br>
		  <%= link_to 'Followers', followers_path %> <%= @user.followers(User).count %>
		  <br>
		  <%= link_to 'Following', following_path %> <%= @user.followees(User).count %>
		  <% if current_user != @user %>
				<% if current_user.follows?(@user) %>
					<%= form_tag("/users/#{@user.id}/unfollow", method: "post") do %>
						<%= submit_tag("Unfollow") %>
					<% end %> 
				<% else %>
					<%= form_tag("/users/#{@user.id}/follow", method: "post") do %>
						<%= submit_tag("Follow") %>
					<% end %> 
				<% end %>
			<% else %>
				<br>
				<%= link_to "Edit Profile", edit_user_registration_path(current_user) %>
			<% end %>
		<!-- Followers Logic. -->
		
	</div>
	<div class="container-fluid col-md-8 post-container" id="user-profile-feed">
	<% @user.posts.each do |post| %>
	  <div class="jumbotron post">
	      <a href="/posts/<%= post.id %>" class="post-link"></a>
        <%= image_tag @user.avatar.url(:thumb) %>
	      <h3><%= link_to post.user.username, "/users/#{post.user.id}" %></h3>


	      <p>
	        <%= link_to linkify_hashtags(post.body), post_path(post) %>
	      </p>

	      <p>
	        <strong>Time Left:</strong>
	        <%= distance_of_time_in_words(Time.now, post.delete_at) %>
	      </p>



	      <%= link_to 'Like', "/posts/#{post.id}/like", method: :post %> <%= post.likers(User).count %> |
	      <%= link_to 'Reply', "/posts/#{post.id}/reply" %>
	      <% if post.user == current_user %> 
	        | <%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' } %>
	      <% end %>
	  </div>
	<% end %> 
	</div>
</main>


