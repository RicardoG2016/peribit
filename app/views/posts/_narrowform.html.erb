<!-- The green post section shown on user and home pages is created by code below. -->

<div class="container-fluid jumbotron post index-post-div narrow-form">
  <div class="row">
    <div class="avatar pull-left narrow-avatar">
        <%= image_tag current_user.avatar.url(:thumb), class: "img-rounded" %>
    </div>

    <div class="col-md-8 post-info">
      

      <%= form_for post, class: "container-fluid jumbotron new-post-form", html: { multipart: true } do |f| %>
        <% if post.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

            <ul>
            <% post.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="field narrow-post-field">
          <%= f.text_area :body, placeholder: " What are you up to?" %>
        </div>

        <div class="field narrow-post-field">
          <%= f.file_field :image %>
        </div>

        <div class="actions narrow-post-submit">
          <%= f.submit("Post", class: "narrow-btn btn") %>
        </div>
      <% end %>

    </div>
  </div>
</div>
