<!DOCTYPE html>
<html>
  <head>
    <title>Embr</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  	<div class="container">
	  	<nav class="navbar navbar-default">
			  <div class="container-fluid">
			    <!-- Brand and toggle get grouped for better mobile display -->
			    <div class="navbar-header">
			      <a class="navbar-brand" href="/">embr</a>
			    </div>

			    <!-- Collect the nav links, forms, and other content for toggling -->
			    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
			      <ul class="nav navbar-nav">
							<% if user_signed_in? %>
			      	  <li class="active"><%= link_to "Sign Out", destroy_user_session_path, :method => :delete %><span class="sr-only">(current)</span></li>
			      	  <!-- Replace email with username below once username has been configured. -->
			      	  <li class="active"><a href="/users/<%= current_user.id %>"><%= current_user.email %></a></li>
			      	<% else %>
			      		<li class="active"><a href="/users/sign_in">Login<span class="sr-only">(current)</span></a></li>
			      		<li class="active"><a href="/users/sign_up">Sign Up</a><span class="sr-only">(current)</span></li>
			      	<% end %>
			      </ul>
			      
			      <ul class="nav navbar-nav navbar-right">
			        <li><a href="/posts/new">New Post</a></li>
			      </ul>
			      <form class="navbar-form navbar-right">
			        <div class="form-group">
			          <input type="text" class="form-control" placeholder="Search">
			        </div>
			        <button type="submit" class="btn btn-default">Submit</button>
			      </form>
			    </div><!-- /.navbar-collapse -->
			  </div><!-- /.container-fluid -->
			</nav>
    	<%= yield %>	
  	</div>
  </body>
</html>
